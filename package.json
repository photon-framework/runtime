{
  "name": "photon-re",
  "displayName": "photon runtime",
  "version": "0.1.3",
  "type": "module",
  "description": "Simple and high performance web frontend framework",
  "main": "index.js",
  "target": {
    "default": {
      "includeNodeModules": true
    }
  },
  "engines": {
    "node": "17"
  },
  "scripts": {
    "build": "yarn run parcel build ./core.ts --no-source-maps && mv index.js core.js && yarn run tsc -p .",
    "deploy": "yarn run build && yarn publish",
    "docs": "rm -rf ./docs/* && rm -rf ../photon.wiki/*.md && node docs.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/photon-framework/runtime.git"
  },
  "keywords": [
    "framework",
    "web"
  ],
  "author": "Frank Mayer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/photon-framework/runtime/issues"
  },
  "homepage": "https://github.com/photon-framework",
  "devDependencies": {
    "@types/path-browserify": "^1.0.0",
    "jsdoc-to-markdown": "^7.1.1",
    "parcel": "^2.2.1",
    "typedoc": "^0.22.11",
    "typedoc-github-wiki-theme": "^1.0.0",
    "typedoc-plugin-markdown": "^3.11.12",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@frank-mayer/magic": "^1.3.2",
    "@parcel/node-libs-browser": "^2.2.1",
    "path-browserify": "^1.0.1"
  }
}
